keybind = shift+ctrl+down=decrease_font_size:1
keybind = shift+ctrl+left=reset_font_size

keybind = shift+ctrl+h=move_tab:-1
keybind = shift+ctrl+l=move_tab:+1

keybind = alt+ctrl+v=paste_from_clipboard
keybind = cmd+s=toggle_quick_terminal

